{
    "name": "brucebnu/yii2-swagger",
    "description": "Swagger Documentation Generator for Yii2 Framework",
    "type": "yii2-extension",
    "keywords": [
        "yii2",
        "yii2 swagger",
        "yii2 api documentation generator"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "brucebnu",
            "email": "bruce.bnu@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "yiisoft/yii2": "~2.0.46",
        "zircote/swagger-php": "^2.1.2",
        "bower-asset/swagger-ui": "^4.14.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~v3.12.0",
        "phpunit/phpunit": "~9.5.25"
    },
    "autoload": {
        "psr-4": {
            "brucebnu\\swagger\\": ""
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
